
@{
    ViewBag.Title = "Pricing";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Content/css")

<link href='https://fonts.googleapis.com/css?family=Poppins:400,500,600' rel='stylesheet' type='text/css'>

<!-- =========================
    PROGRAM SECTION
============================== -->
<section id="program" class="parallax-section">
    <div class="container">
        <div class="row">

            <div class="wow fadeInUp col-md-12 col-sm-12" data-wow-delay="0.6s">
                <div class="section-title">
                    <h2><span style="color:#f2545f">Pricing Packages</span></h2>
                    <p>MDDS believes lessons are priced competitively to suit all - check out our intro offers below. <span style="font-style:italic">  (* Intro offers ONLY available for new students)</span></p>
                </div>
            </div>

            <div class="wow fadeInUp col-md-10 col-sm-10" data-wow-delay="0.9s">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="active"><a href="#fday" aria-controls="fday" role="tab" data-toggle="tab">INTRO PACKAGE I</a></li>
                    <li><a href="#sday" aria-controls="sday" role="tab" data-toggle="tab">INTRO PACKAGE II</a></li>
                    <li><a href="#tday" aria-controls="tday" role="tab" data-toggle="tab">STANDARD LESSONS</a></li>
                </ul>
                <!-- tab panes -->
                <div class="tab-content">

                    <div role="tabpanel" class="tab-pane active" id="fday">
                        <!-- program speaker here -->
                        <div class="col-md-2 col-sm-2">
                            <img src="@Url.Content("~/images/program-img1.jpg")" class="img-responsive" alt="program">
                        </div>
                        <div class="col-md-10 col-sm-10">
                            <h6>
                                <span><i class="fa fa-clock-o"></i> AM/PM</span>
                                <span><i class="fa fa-map-marker"></i> Gotham City</span>
                            </h6>
                            <h3>3 x 1 HR LESSONS</h3>
                            <h3 style="color:#f2545f">&pound;60</h3>
                            <p>Your first 3 one hour driving lessons all for only &pound;60 .</p>
                        </div>

                        <!-- program divider -->
                        <div class="program-divider col-md-12 col-sm-12"></div>
                       
                    </div>
                   
                    <div role="tabpanel" class="tab-pane" id="sday">
                        <!-- program speaker here -->
                        <div class="col-md-2 col-sm-2">
                            <img src="@Url.Content("~/images/program-img2.jpg")" class="img-responsive" alt="program">
                        </div>
                        <div class="col-md-10 col-sm-10">
                            <h6>
                                <span><i class="fa fa-clock-o"></i> AM/PM</span>
                                <span><i class="fa fa-map-marker"></i> Gotham City</span>
                            </h6>
                            <h3>5 x 1 HR LESSONS</h3>
                            <h3 style="color:#f2545f">&pound;115</h3>
                            <p>Your first 5 one hour driving lessons all for only &pound;115 .</p>
                        </div>

                        <!-- program divider -->
                        <div class="program-divider col-md-12 col-sm-12"></div>
                       
                    </div>
                    <div role="tabpanel" class="tab-pane" id="tday">
                        <!-- program speaker here -->
                        <div class="col-md-2 col-sm-2">
                            <img src="@Url.Content("~/images/program-img3.jpg")" class="img-responsive" alt="program">
                        </div>
                        <div class="col-md-10 col-sm-10">
                            <h6>
                                <span><i class="fa fa-clock-o"></i> AM/PM</span>
                                <span><i class="fa fa-map-marker"></i> Gotham City</span>
                            </h6>
                            <h3>Standard Lessons</h3>
                            <h3 style="color:#f2545f">&pound;25 / each</h3>
                            <p>All other lessons are priced &pound;25 each regardless of time of day (weekends included) .</p>
                        </div>

                        <!-- program divider -->
                        <div class="program-divider col-md-12 col-sm-12"></div>
                      
                    </div>
</section>