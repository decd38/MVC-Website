
@{
    ViewBag.Title = "BookingSuccess";
}

<section id="contact" class="parallax-section">
    <div class="container">


        <div class="wow fadeInUp col-md-offset-1 col-md-10 col-sm-10" data-wow-delay="0.6s" style="background-color:#101010; border-radius:20px;margin-top:50px">
            <div class="contact_des" style="text-align:center">
                <h1 style="color:#f2545f">Booking Successful <span class="glyphicon glyphicon-check"></span></h1>
                <br />
                <p id="bookStyle">Your selected Driving Lesson has been successfully booked <span class="glyphicon glyphicon-ok-sign"></span></p>
                <p id="bookStyle">If you are a new customer I will give you a call the night before your booked lesson to agree a collection point and drop off point.</p>
                <p id="bookStyle">If you are an exisiting customer please ensure you are at the previously agreed pick up point at least 5 mins before the booked time slot.</p>
            </div>
            <br />
        </div>
        <div style="margin-left:30%">
            <a href="@Url.Action("New", "Lesson")" class="btn btn-danger">BOOK ANOTHER LESSON</a>
            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger">Log off</a>            
        </div>
    </div>
</section>